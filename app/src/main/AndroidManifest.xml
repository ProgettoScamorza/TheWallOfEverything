<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.progettoscamorza.thewallofeverything">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/UnityThemeSelector.Translucent">

        <!-- android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" -->
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainMenuActivity" />
        <activity android:name=".activities.TopicsActivity" />
        <activity android:name=".activities.TopicMatchesActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.StorageActivity" />
        <activity android:name=".activities.GameActivity" />
        <activity android:name=".activities.PopupActivity" />
        <activity android:name="com.scamorzaproject.topicmodeplay.UnityPlayerActivity" />
        <activity android:name=".activities.NewQuestionProposalActivity" />

        <service android:name=".services.UnityDataSender" />
    </application>

</manifest>